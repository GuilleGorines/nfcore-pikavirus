/*
 * -------------------------------------------------
 *  Nextflow config file for running full-size tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a full size pipeline test. Use as follows:
 *   nextflow run nf-core/pikavirus -profile test, <docker/singularity>
 */

params {
  config_profile_name = 'Standard test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function with paired-end, small-sized reads, and small-sized databases'
 
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  
  kraken2_db = ""
  kaiju_db = "http://kaiju.binf.ku.dk/database/kaiju_index.tgz"

  input_paths = [
    ['Testdata',
    ['https://github.com/GuilleGorines/data/blob/main/text_samples_nfcore_pikavirus/test_data_nfcore-pikavirus_R1.fastq.tar.gz',
    'https://github.com/GuilleGorines/data/blob/main/text_samples_nfcore_pikavirus/test_data_nfcore-pikavirus_R2.fastq.tar.gz']
    ]
]
}
