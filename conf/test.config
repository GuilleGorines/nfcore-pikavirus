/*
 * -------------------------------------------------
 *  Nextflow config file for running full-size tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a full size pipeline test. Use as follows:
 *   nextflow run nf-core/pikavirus -profile test_full,<docker/singularity>
 */

params {
  config_profile_name = 'Standard test profile'
  config_profile_description = 'Full test dataset to check pipeline function, with low weight paired-end reads (1 sample)'

  // Input data for full size test
  // TODO nf-core: Specify the paths to your full test data ( on nf-core/test-datasets or directly in repositories, e.g. SRA)
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  
  input_paths = [
    ['Testdata',
    ['https://github.com/GuilleGorines/data/blob/main/text_samples_nfcore_pikavirus/test_data_nfcore-pikavirus_R1.fastq.tar.gz',
    'https://github.com/GuilleGorines/data/blob/main/text_samples_nfcore_pikavirus/test_data_nfcore-pikavirus_R2.fastq.tar.gz']
    ]
]
}
